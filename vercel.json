{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/register", "dest": "/public/register.html" },
    { "src": "/app", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/login.html" }
  ],
  "functions": {
    "api/ping.js": { "maxDuration": 300 }
  },
  "env": {
    "NODE_ENV": "production",
    "REDIS_URL": "@redis_url",
    "JWT_SECRET": "@jwt_secret"
  }
}